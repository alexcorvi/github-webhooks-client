{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"declaration": true
	},
	"include": [ "./src/**/*" ],
	"exclude": [ "node_modules" ]
}
